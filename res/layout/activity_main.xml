<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context="com.alexkaz.simplytaskmanager.MainActivity"
    sothree:umanoPanelHeight="30dp"
    sothree:umanoShadowHeight="4dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1e1e1"
            android:paddingTop="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">
            <ListView
                android:id="@+id/mainListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/actionBtn"
                android:src="@drawable/ic_add_white_24dp"
                sothree:fabSize="normal"
                android:layout_gravity="bottom|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="#ffffff">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="Статистика"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.alexkaz.simplytaskmanager.uicomp.PieChartView
                    android:id="@+id/pieChart"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/pieChart">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/doneTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawableLeft="@drawable/done_status_icon"
                            android:drawablePadding="6dp"
                            android:text="Виконано - 34%(13)"/>
                        <TextView
                            android:id="@+id/inProcessTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawableLeft="@drawable/in_process_status_icon"
                            android:drawablePadding="6dp"
                            android:text="В процесі - 14%(5)"/>
                        <TextView
                            android:id="@+id/notCompletedTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawableLeft="@drawable/not_completed_status_icon"
                            android:drawablePadding="6dp"
                            android:text="Не виконано - 52%(23)"/>
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
