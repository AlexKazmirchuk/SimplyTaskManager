<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/itemTxt"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="1."/>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:src="@drawable/ic_clear_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/txtCharCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/deleteBtn"
            android:layout_toStartOf="@id/deleteBtn"
            android:textSize="10sp"
            android:gravity="end"
            android:text="33/50"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTextContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/itemTxt"
            android:layout_toEndOf="@id/itemTxt"
            android:layout_toLeftOf="@id/deleteBtn"
            android:layout_toStartOf="@id/deleteBtn"
            android:layout_above="@id/txtCharCounter">
            <EditText
                android:id="@+id/editTextTaskItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:hint="Please input your task"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</LinearLayout>