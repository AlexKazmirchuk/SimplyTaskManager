<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/itemTxt"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/temp_value_of_list_add_item"/>
        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:src="@drawable/ic_clear_grey_24dp"
            android:contentDescription="@string/delete_button_icon_content_description"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/txtCharCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/deleteBtn"
            android:layout_toStartOf="@id/deleteBtn"
            android:textSize="10sp"
            android:gravity="end"
            android:text="@string/txt_char_counter_temp_value"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTextContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/itemTxt"
            android:layout_toEndOf="@id/itemTxt"
            android:layout_toLeftOf="@id/deleteBtn"
            android:layout_toStartOf="@id/deleteBtn"
            android:layout_above="@id/txtCharCounter">
            <EditText
                android:id="@+id/editTextTaskItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:lines="1"
                android:maxLength="250"
                android:hint="@string/edit_text_task_item_hint"/>
        </android.support.design.widget.TextInputLayout>
</RelativeLayout>