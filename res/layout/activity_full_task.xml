<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_full_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="30dp"
    sothree:umanoShadowHeight="4dp"
    tools:context="com.alexkaz.simplytaskmanager.FullTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#dddddd">
            <ImageView
                android:id="@+id/reviewIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="7dp"
                android:src="@drawable/work_icon"
                android:contentDescription="@string/review_icon_description"/>
            <TextView
                android:id="@+id/txtViewTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@drawable/full_task_title_bg"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginEnd="7dp"
                android:padding="3dp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/txt_view_task_title_text"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/reviewTaskListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp">
            </ListView>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="@string/bottom_panel_title"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <com.alexkaz.simplytaskmanager.uicomp.PieChartView
                    android:id="@+id/pieChartViewFullTask"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/pieChartViewFullTask"
                    android:layout_toStartOf="@id/pieChartViewFullTask">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/doneTxtViewFullTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawableLeft="@drawable/done_status"
                            android:drawableStart="@drawable/done_status"
                            android:drawablePadding="6dp"
                            android:text="@string/done_txt_view_text"/>
                        <TextView
                            android:id="@+id/inProcessTxtViewFullTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawableLeft="@drawable/in_process_status"
                            android:drawableStart="@drawable/in_process_status"
                            android:drawablePadding="6dp"
                            android:text="@string/in_process_txt_view_text"/>
                        <TextView
                            android:id="@+id/notCompletedTxtViewFullTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawableLeft="@drawable/not_completed_status"
                            android:drawableStart="@drawable/not_completed_status"
                            android:drawablePadding="6dp"
                            android:text="@string/not_completed_txt_view_text"/>
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
